<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/CSS/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Alata&family=Courgette&family=Crimson+Pro&family=Josefin+Sans&family=Karla&family=Noto+Sans+Ogham&family=Permanent+Marker&family=Rowdies&family=Special+Elite&family=Ultra&display=swap" rel="stylesheet"> 
    <title>Better Reads</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" style="font-family: 'Special Elite', cursive; color: white;" href="/">Home</a>
      <button
        class="navbar-toggler ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <h1 class="sitetitle" style="text-align: center;">Better Reads</h1>
      <div
        class="collapse navbar-collapse navbar-links justify-content-end"
        id="navbarNav"
      >
        <ul style="margin-right: 2%;" class="navbar-nav ml-auto">

          {{#if logged_in}}
            <li class="nav-item">
              <a class="nav-link" id="navBtn" href="/api/books" style="font-family: 'Special Elite', cursive; color: black; margin-right: 2%;">My Books</a>
            </li>
            <li class="nav-item">
              <button class="no-button" id="logBtn" style="font-family: 'Special Elite', cursive; color: black; margin-right: 2%;">Logout</button>
            </li>

          {{else}}
            <li>
              <a style="font-family: 'Special Elite', cursive; color: white; margin-right: 2%;" href="/login">Login</a>
            </li>
          {{/if}}

        </ul>
      </div>
    </nav>
    {{{body}}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
    ></script>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/deleteBtn.js"></script>
  </body>
</html>
